      <Button fx:id="loginButton" layoutX="237.0" layoutY="150.0" mnemonicParsing="false" onAction="#sendLogin" prefWidth="50.0" text="Login">
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor>
      </Button>
      <TextField editable="false" layoutX="126.0" layoutY="30.0" prefHeight="25.0" prefWidth="272.0" text="Bitte geben Sie Benutzername und Passwort ein." />
   </children>
</Pane>
